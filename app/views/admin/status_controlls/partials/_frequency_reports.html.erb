<table id="tableItems" cellpadding="0" cellspacing="0" width="auto">
  <thead>
    <tr>
      <th>Registro</th>
      <th>Mapa</th>
      <th>Vaga</th>
      <th>Quantidade de ocupação</th>
    </tr>
  </thead>
  <tbody>
    <% i = 1 %>
    <% reports.each do |report| %>
      <tr class="<%= cycle('even', 'odd') %>">
        <td align=center ><%= i %></td>
        <td align=center ><%= report.vacancy.map.codigo %></td>
        <td align=center ><%= report.vacancy.codigo %></td>
        <td align=center ><%= report.total_vagas%></td>
      </tr>
      <%i = i+ 1%>
    <% end %>
  </tbody>
</table>