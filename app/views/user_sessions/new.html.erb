<%= raw show_msg(flash[:notice], :notice) %>
<%= form_for @user_session, :as => @user_session, :url => user_sessions_path, :html => {:class => "mainForm clear", :id => "formEditor", :multipart => true} do |u| %>
  <p id="asterisk"><span class="star">*</span> Campos obrigatórios.</p>
  <fieldset>
  <legend><span>Login</span></legend>
    <div class="field clear">
      <label for="txtName">Login: <span class="star">*</span></label>
      <%= u.text_field :login, :class => "text long" %>
      <a class="hint" href="#">
        <img src="/images/encore/ico/icoHint.png" alt="Hint" class="hint"/>
        <span>É necessário informar o login.</span>
      </a>
      <%= raw show_error_in_form(@user_session.errors[:login])%>
    </div>
    
    <div class="field clear">
      <label for="txtName">Password: <span class="star">*</span></label>
      <%= u.password_field :password, :class => "text long" %>
      <a class="hint" href="#">
        <img src="/images/encore/ico/icoHint.png" alt="Hint" class="hint"/>
        <span>É necessário informar o password.</span>
      </a>
      <%= raw show_error_in_form(@user_session.errors[:password])%>
    </div>
  </fieldset>
  
  <div class="formActions clear">
    <%= u.submit "Login", :class => "button primary" %>
  </div>
<%end%>