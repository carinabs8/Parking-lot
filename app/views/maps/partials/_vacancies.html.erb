<%map.vagas.each do |vaga|%>
  <p id="map_vaga">
    <% if vaga.vaga_status.last.nil? %>
      <% status = StatusControll::AVAILABLE %>
    <% else %>
      <% status = vaga.vaga_status.last.status%>
    <%end%>
    
    <%= link_to "/vagas/#{vaga.id}/coordenates", :remote => true, :id=>"vaga-#{vaga.codigo}", :status => status, :class => :map_vaga do%>
      <% if status == StatusControll::AVAILABLE %>
        <%= image_tag('encore/ico/_available.png') %>
      <% elsif status == StatusControll::RESTRICTED%>
        <%= image_tag('encore/ico/_temporarily-not-available.png') %>
      <% else%>
        <%= image_tag('encore/ico/_not-available.png') %>
      <%end%>
      <span class="vaga_cod"><%=vaga.codigo%></span>
    <% end %>
  </p>
  <div id="salva-vaga-<%=vaga.codigo%>"></div>
  <%unless vaga.eixo_x.nil?%>
    <script>$("#vaga-<%=vaga.codigo%>").offset({ top: <%=vaga.eixo_x%>, left: <%=vaga.eixo_y%> });</script>
  <% end %>
<%end%>